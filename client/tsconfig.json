{
	"compilerOptions": {
		"target": "es2016",
		"module": "es6",
		"strict": false,
		"noImplicitAny": false,
		"noEmit": true,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": false,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"]
		},
		"typeRoots": [
			"node_modules/@types",
			"node_modules/phaser/types"//change from module to modules
		],
		"types": [
			"phaser"
		]
	},
	"include": [
		"src/**/*"
	] 
}
